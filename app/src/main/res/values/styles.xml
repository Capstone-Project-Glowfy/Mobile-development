<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedCorner" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

    </style>

    <style name="ClickableRadioButton">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:background">@drawable/radiobutton_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@drawable/text_selector</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomRatingBar" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/yellow</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="CardViewTopRounded" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.CardViewTopRounded</item>
    </style>

    <style name="ShapeAppearance.CardViewTopRounded" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">16dp</item>
        <item name="cornerSizeTopRight">16dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="ResultCardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.ResultCardView</item>
    </style>

    <style name="ShapeAppearance.ResultCardView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">50dp</item>
        <item name="cornerSizeTopRight">50dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

</resources>